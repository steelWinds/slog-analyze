{
	"name": "slog-analyze",
	"version": "0.0.1",
	"private": true,
	"description": "Miniature log analyzer, just for fun",
	"keywords": [
		"analyzer",
		"cli",
		"log"
	],
	"license": "MPL-2.0",
	"author": "steelWinds",
	"repository": {
		"type": "git",
		"url": "https://github.com/steelWinds/slog-analyze"
	},
	"bin": {
		"slog-analyze": "./build/slog-analyze.mjs"
	},
	"files": [
		"build",
		"README.md",
		"LICENSE"
	],
	"os": [
		"darwin",
		"linux",
		"win32"
	],
	"type": "module",
	"main": "./build/slog-analyze.mjs",
	"scripts": {
		"build": "tsdown --env-file .env.production --minify --log-level error",
		"build:dev": "tsdown --env-file .env.development --sourcemap",
		"test": "vitest",
		"test:run": "vitest run --testTimeout 0",
		"test:coverage": "vitest run --coverage",
		"lint": "oxlint --type-aware",
		"lint:fix": "oxlint --fix",
		"lint-staged": "lint-staged",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"prepare": "husky"
	},
	"dependencies": {
		"chalk": "^5.6.2",
		"chrono-node": "^2.9.0",
		"commander": "^14.0.2",
		"consola": "^3.4.2",
		"yocto-spinner": "^1.0.0"
	},
	"devDependencies": {
		"@commander-js/extra-typings": "^14.0.0",
		"@faker-js/faker": "^10.2.0",
		"@types/node": "^25.0.9",
		"@vitest/coverage-v8": "^4.0.17",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"memfs": "^4.56.9",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"oxlint-tsgolint": "^0.11.2",
		"tsdown": "0.20.1",
		"typescript": "~5.9.3",
		"vitest": "^4.0.17"
	},
	"overrides": {
		"tsdown": "0.20.1"
	},
	"lint-staged": {
		"*": "oxfmt --no-error-on-unmatched-pattern",
		"*.{js,jsx,ts,tsx,mjs,cjs}": [
			"pnpm run lint",
			"pnpm run test:run --passWithNoTests"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
