{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "error",
		"suspicious": "error",
		"style": "error"
	},
	"plugins": ["eslint"],
	"rules": {
		"max-statements": "off",
		"no-unused-vars": "error",
		"eqeqeq": ["error", "always", { "null": "ignore" }],
		"no-magic-numbers": "off",
		"no-debugger": "error",
		"no-eval": "error",
		"id-length": "off",
		"init-declarations": "off",
		"func-style": [
			"error",
			"expression",
			{
				"allowArrowFunctions": true,
				"allowTypeAnnotation": true
			}
		]
	},
	"env": {
		"es2022": true,
		"browser": true,
		"node": true
	}
}
